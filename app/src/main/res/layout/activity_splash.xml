<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:quikr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/zc_green"
    tools:context="com.partho.zoomcar.zoomcarapp.SplashActivity">

    <TextView
        android:id="@+id/porter_app_intro_text"
        android:layout_centerInParent="true"
        android:text="ZoomCar"
        android:textSize="35sp"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:gravity="center"/>


    <com.partho.zoomcar.zoomcarapp.utils.ui.CustomTextView
        android:id="@+id/porter_app_intro"
        android:layout_below="@id/porter_app_intro_text"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:textSize="80sp"
        android:text="@string/fa_car"
        android:textColor="@android:color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        quikr:fontName="fa.ttf"
        />

    <ProgressBar
        android:id="@+id/porter_progress_bar"
        android:layout_below="@id/porter_app_intro"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"/>


</RelativeLayout>
